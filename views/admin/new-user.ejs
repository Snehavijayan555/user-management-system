<%- include('../layouts/header.ejs') -%>


  <h3 class="text-center fw-bold mt-3">Add New User</h3>
  


  <div class="d-flex justify-content-center mt-3">
    <div class="card" style="width: 30%; background-color: rgba(255, 255, 255, 0.514);">
      <div class="card-body">
        <center>
          <form action="" method="post" enctype="">
            <fieldset class="text-start">
              <label class="form-label mt-4" for="readOnlyInput">Name</label>
              <input
                type="text"
                class="form-control"
                name="name"
                placeholder="Enter Name"
                required
              />
            </fieldset>
            <fieldset class="text-start">
              <label class="form-label mt-4" for="readOnlyInput">Email</label>
              <input
                type="email"
                name="email"
                class="form-control"
                placeholder="Enter Email"
                required
              />
            </fieldset>
            <fieldset class="text-start">
              <label class="form-label mt-4" for="readOnlyInput">Mobile</label>
              <input
                type="text"
                name="mno"
                class="form-control"
                placeholder="Enter Mobile"
                required
              />
            </fieldset>
            <fieldset class="text-start">
              <label class="form-label mt-4" for="readOnlyInput">Password</label>
              <input
                type="password"
                name="password"
                class="form-control"
                placeholder="Enter Password"
                required
              />
            </fieldset>
            <div class="d-flex justify-content-center mt-3">
              <input type="submit" class="btn btn-success" value="Add User" />
            </div>
          </form>
        </center>
      </div>
    </div>
  </div>
  
  
  <div class="text-end me-3">
    <a href="/admin/home" class="btn btn-info">Go Back</a>
  </div>
  
  

<% if(typeof message !== 'undefined'){ %>
<p style="color: red"><%= message %></p>
<% } %> <%- include('../layouts/footer.ejs') -%>
